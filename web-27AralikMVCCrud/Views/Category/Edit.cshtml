@using web_27AralikMVCCrud.Data.Entities
@model Category
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Edit</title>
</head>
<body>
    @if (ViewBag.IsSuccess != null || ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    else if (ViewBag.IsSuccess != null || ViewBag.IsSuccess == false)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    //Form içindeki inputların web sitesi tarafından gönderildiğini anlamak için kullanılan bir güvenlik özelliğidir. Her post formunda olmalıdır.
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Description)</span>
                    <input class="btn btn-primary" type="submit" name="name" value="Kategori Düzenle" />
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
